<div class="contact" id="contact">
  <div class="contact__heading">
    <span>Get in Touch</span>
    <hr width="122" color="#3940D0" size="3" align="center" />
  </div>
  <div class="contact__content">
    <div class="contact__map">
      <iframe
        src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJZ-DLDJ9HrTsR681u8-Ui8v4&amp;key=AIzaSyBp3Mr5QLKRe1KiqOP5xzWb4xonDIMUCE4"
      ></iframe>
    </div>
    <div class="contact__form">
      <form action="https://formspree.io/f/xqkgbvly" method="post">
        <div class="contact__form__field">
          <!-- <label for="contact__form__name">Name</label> -->
          <input
            type="text"
            id="contact__form__name"
            placeholder="Name"
            name="name"
            required
          />
        </div>
        <div class="contact__form__field">
          <!-- <label for="contact__form__email">Email</label> -->
          <input
            type="email"
            id="contact__form__email"
            placeholder="Email"
            name="_replyto"
            required
          />
        </div>
        <div class="contact__form__field">
          <!-- <label for="contact__form__phone">Phone</label> -->
          <input
            type="tel"
            id="contact__form__phone"
            placeholder="Phone (Optional)"
            name="phone"
          />
        </div>
        <div class="contact__form__field">
          <!-- <label for="contact__form__msg">Message</label> -->
          <textarea
            name="contact__form__msg"
            id="contact__form__msg"
            cols="30"
            rows="4"
            placeholder="Message"
            name="message"
          ></textarea>
        </div>
        <div class="contact__form__field">
          <input type="submit" value="Submit" />
          <br>
          <div class="contact__form__thankyou__msg hidden">
            Thank you for reaching out to us!<br />We'll contact you soon!
          </div>
        </div>
        <script src="scripts/contactForm.js"></script>
      </form>
    </div>
  </div>
</div>
