<!-- Events Container -->
<div class="events-container">
  <!-- Events Heading Container -->
  <div class="events-heading">
      <span>Events</span>
      <hr width="70" color="#3940D0" size="3" align="center"/>
  </div>
  <!-- Events Content Container -->
  <div class="events-parent">
    <!-- Events Gravitas Container -->
    <div class="events-gravitas">
      <!-- Events Gravitas Heading Container -->
      <div class="events-gravitas-heading">
        <span>Gravitas</span>
      </div>
      <!-- Events Gravitas Carousel Container -->
      <div id="events-gravitas-carousel" class="lazy-gravitas slider" data-sizes="50vw">
        <div class="events-carousel-image-gravitas">
            <img data-lazy="/img/Star-Party.png" data-srcset="/img/Star-Party.png" data-sizes="50vw" class="events-carousel-image">
        </div>
        <div class="events-carousel-image-gravitas">
            <img data-lazy="/img/Apollo-Infinite.png" data-srcset="/img/Apollo-Infinite.png" data-sizes="50vw" class="events-carousel-image">
        </div>
        <div class="events-carousel-image-gravitas">
            <img data-lazy="/img/Astronaut-Odyssey.png" data-srcset="/img/Astronaut-Odyssey.png" data-sizes="50vw" class="events-carousel-image">
        </div>
      </div>
      <!-- Events Gravitas Learn More Button  -->
      <span class="events-gravitas-learn">
        <button class="events-learn-button-gravitas">Learn More</button>
      </span>
    </div>
    <!-- Events Flagship Container -->
    <div class="events-flagship">
      <!-- Events Flagship Heading Container -->
      <div class="events-flagship-heading">
        <span>Flagship</span>
      </div>
      <!-- Events Flagship Carousel Container -->
      <div id="events-flagship-carousel" class="lazy-flagship slider" data-sizes="50vw">
        <div class="events-carousel-image-flagship">
            <img data-lazy="/img/Astra.png" data-srcset="/img/Astra.png" data-sizes="50vw">
        </div>
        <div class="events-carousel-image-flagship">
            <img data-lazy="/img/Antariksh.png" data-srcset="/img/Antariksh.png" data-sizes="50vw" class="events-carousel-image">
        </div>
        <div class="events-carousel-image-flagship">
            <img data-lazy="/img/Astra.png" data-srcset="/img/Astra.png" data-sizes="50vw">
        </div>
      </div>
      <!-- Events Flagship Learn More Button  -->
      <span class="events-flagship-learn">
        <button class="events-learn-button-flagship">Learn More</button>
      </span>
    </div>
  </div>
</div>